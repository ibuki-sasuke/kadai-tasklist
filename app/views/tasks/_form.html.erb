<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <%= render 'layouts/error_messages', model: f.object %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.submit '登録' %>
<% end %>